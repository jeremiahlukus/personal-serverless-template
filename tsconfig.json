{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2018"
    ],
    "allowJs": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "typings/*"
    ],
    "baseUrl": "./",
    "paths": {
      "@utils": [
        "src/utils"
      ],
      "@models": [
        "src/models"
      ],
      "@handlers/*": [
        "src/handlers/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@schemas": [
        "src/schemas"
      ],
      "@services": [
        "src/services"
      ],
      "@factories": [
        "spec/factories"
      ],
      "@/*": [
        "src/*"
      ],
      "@root": [
        "./"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
